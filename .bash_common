# Unix utilities
alias fn="find . -name"
alias g="grep --exclude-dir=venv --exclude-dir=build --exclude-dir=patches --exclude-dir=node_modules --exclude-dir=staticfiles --exclude-dir=__pycache__ --exclude-dir=static --exclude-dir=.mypy_cache"

# SSH init
alias si="eval \$(ssh-agent); ssh-add ~/.ssh/id_rsa"

# Git aliases
alias ga="git add"
alias gb="git branch"
alias gbl="git blame"
alias gca="git commit --amend"
alias gce="git commit --allow-empty -m"
alias gcfd="git clean -fd"
alias gcm="git commit -am"
alias gco="git checkout"
alias gcp="git cherry-pick"
alias gcr2="git commit -am to-be-squashed && git-rebase-i-2.sh"
alias gcr2p="git commit -am to-be-squashed && git-rebase-i-2.sh && rbt post -g no -r"
alias gd="git diff"
alias gdesc="git describe"
alias glg="git log"
alias gm="git merge"
alias gpl="git pull"
alias gp="git push"
alias gr="git rebase"
alias gr2="git-rebase-i-2.sh"
alias grih2="git rebase -i HEAD~2"
alias grm="git rm"
alias grh="git reset HEAD"
alias grs="git reset"
alias grsh1="git reset --hard HEAD~1"
alias grd="git review dcommit -r"
alias grl="git rev-list"
alias gsh="git show"
alias gst="git status"
alias gt="git tag"
